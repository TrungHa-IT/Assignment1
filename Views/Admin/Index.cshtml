@{
    Layout = null;
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }
        .admin-container {
            max-width: 800px;
            width: 100%;
        }
        .option-card {
            text-align: center;
            padding: 40px;
            border-radius: 10px;
            transition: transform 0.3s ease-in-out, box-shadow 0.3s;
        }
        .option-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        }
        .icon {
            font-size: 40px;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <div class="container admin-container">
        <div class="row g-4">
            <div class="col-md-6">
                <a asp-action="Index" asp-controller="SystemAccounts" class="text-decoration-none">
                    <div class="option-card bg-primary text-white p-4">
                        <div class="icon">👤</div>
                        <h4>Quản lý tài khoản</h4>
                    </div>
                </a>
            </div>
            <div class="col-md-6">
                <a asp-action="Dashboard" asp-controller="Admin" class="text-decoration-none">
                    <div class="option-card bg-success text-white p-4">
                        <div class="icon">📊</div>
                        <h4>Tạo báo cáo thống kê</h4>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

