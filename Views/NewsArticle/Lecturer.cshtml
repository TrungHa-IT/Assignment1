@model List<NewsArticle>

<div class="container mx-auto p-4 max-w-4xl">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-4">Latest News</h2>

    @if (!Model.Any())
    {
        <p class="text-center text-gray-500">No active news articles available.</p>
    }
    else
    {
        <div class="space-y-4">
            @foreach (var article in Model)
            {
                <div class="bg-white shadow-md rounded-md p-4 border border-gray-200 hover:shadow-lg transition duration-300">
                    <h3 class="text-lg font-semibold text-gray-800 mb-1">
                        <a href="@Url.Action("LecturerDetails", "NewsArticle", new { id = article.NewsArticleId })" class="hover:text-blue-600">
                            @article.NewsTitle
                        </a>
                    </h3>
                    <p class="text-xs text-gray-500">Published on: @article.CreatedDate?.ToString("MMMM dd, yyyy")</p>
                    <p class="text-sm text-gray-700 mt-1">@article.Headline</p>

                    <div class="flex justify-between items-center mt-3">
                        <span class="text-xs text-blue-500">@article.NewsSource</span>
                        <a href="@Url.Action("Details", "News", new { id = article.NewsArticleId })"
                           class="text-sm text-white bg-blue-600 px-3 py-1 rounded hover:bg-blue-700">
                            Read More
                        </a>
                    </div>

                    @if (article.Tags.Any())
                    {
                        <div class="mt-2 flex flex-wrap gap-1">
                            @foreach (var tag in article.Tags)
                            {
                                <span class="text-xs bg-gray-200 text-gray-800 px-2 py-1 rounded-full">
                                    @tag.TagName
                                </span>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>
