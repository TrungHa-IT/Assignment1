@model NewsArticle

<div class="container mx-auto p-4 max-w-2xl">
    <div class="bg-white shadow-md rounded-md p-6 border border-gray-200">
        <h1 class="text-2xl font-bold text-gray-800 mb-3">@Model.NewsTitle</h1>
        <p class="text-xs text-gray-500">Published on: @Model.CreatedDate?.ToString("MMMM dd, yyyy")</p>

        <hr class="my-3">

        <p class="text-sm text-gray-700">@Model.NewsContent</p>

        <div class="mt-4 text-sm">
            <span class="font-medium text-gray-600">Source: </span>
            <span class="text-blue-600">@Model.NewsSource</span>
        </div>

        @if (Model.Tags.Any())
        {
            <div class="mt-3 flex flex-wrap gap-1">
                <span class="text-sm font-medium text-gray-600">Tags:</span>
                @foreach (var tag in Model.Tags)
                {
                    <span class="text-xs bg-gray-200 text-gray-800 px-2 py-1 rounded-full">
                        @tag.TagName
                    </span>
                }
            </div>
        }

        <div class="mt-5 text-center">
            <a href="@Url.Action("Lecturer", "NewsArticle")" >
                Back to News
            </a>
        </div>
    </div>
</div>
