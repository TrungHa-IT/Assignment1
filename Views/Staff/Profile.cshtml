@model ASS1.Models.SystemAccount

@{
    ViewBag.Title = "Profile Management";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header text-center bg-primary text-white">
                    <h4>Personal Profile</h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label class="form-label">Username:</label>
                            <input type="text" class="form-control" value="@Model.AccountName" readonly>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Email:</label>
                            <input type="email" class="form-control" value="@Model.AccountEmail" readonly>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Role:</label>
                            <select class="form-select" disabled>
                                <option value="1" selected>@(Model.AccountRole == 1 ? "Administrator" : "User")</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Password:</label>
                            <input type="password" class="form-control" value="@Model.AccountPassword" readonly>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="SystemAccounts" asp-action="Edit" asp-route-id="@Model.AccountId" class="btn btn-warning">
                                Edit
                            </a>
                            <a asp-action="Index" asp-controller="Staff" class="btn btn-warning">
                                Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border-radius: 12px;
    }

    .btn {
        width: 48%;
    }
</style>
