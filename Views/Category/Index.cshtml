@model IEnumerable<ASS1.Models.Category>

@{
    ViewBag.Title = "Index";
}
<h2>Danh sách Danh mục</h2>
<a href="@Url.Action("Create", "Category")">Create</a>
<table border="1" width="100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên danh mục</th>
            <th>Mô tả</th>
            <th>Danh mục cha</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDesciption</td>
                <td>@(category.ParentCategory != null ? category.ParentCategory.CategoryName : "Không có")</td>
                <td>@(category.IsActive == true ? "Hoạt động" : "Không hoạt động")</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })">Sửa</a> |
                    <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>


