@model NewsArticle

<div class="container my-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-4">
            <!-- Title -->
            <h1 class="text-primary fw-bold mb-3">@Model.NewsTitle</h1>
            <p class="text-muted small">📅 Published on: @Model.CreatedDate?.ToString("MMMM dd, yyyy")</p>

            <p class="text-muted small">📅 Updated on: @Model.ModifiedDate?.ToString("MMMM dd, yyyy")</p>

            <hr class="my-3">

            <!-- Content -->
            <p class="text-dark">@Model.NewsContent</p>

            <!-- Source -->
            <div class="mt-4">
                <span class="fw-semibold text-muted">📰 Source:</span>
                <span class="text-primary">@Model.NewsSource</span>
            </div>

            <!-- Tags -->
            @if (Model.Tags.Any())
            {
                <div class="mt-3">
                    <span class="fw-semibold text-muted">🏷 Tags:</span>
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="badge bg-secondary me-1">@tag.TagName</span>
                    }
                </div>
            }

            <!-- Back Button -->
            <div class="mt-4 text-center">
                <a href="@Url.Action("Lecturer", "NewsArticle")" class="btn btn-outline-primary">
                    ← Back to News
                </a>
            </div>
        </div>
    </div>
</div>
